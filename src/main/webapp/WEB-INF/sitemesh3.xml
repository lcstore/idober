<sitemesh>
	<!-- 不被sitemesh装饰的路径 -->
	<mapping path="/assets/*" exclue="true" />
	<!-- Map default decorator. This shall be applied to all paths if no other 
		paths match. -->
	<!-- <mapping decorator="/WEB-INF/ftl/decorator/main.ftl" /> -->

	<!-- Map decorators to path patterns. -->
	<!-- <mapping path="/admin/*" decorator="/another-decorator.html" /> -->

	<!-- Alternative convention. This is more verbose but allows multiple decorators 
		to be applied to a single path. -->
	<mapping>
		<decorator>/WEB-INF/ftl/decorator/footer.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/summary.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/activity.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/navbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/header.ftl</decorator>
	</mapping>
	<mapping>
		<path>/item/*</path>
		<decorator>/WEB-INF/ftl/decorator/footer.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/activity.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/navbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/header.ftl</decorator>
	</mapping>
	<mapping>
		<path>/union/*</path>
		<decorator>/WEB-INF/ftl/decorator/footer.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/blankbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/navbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/header.ftl</decorator>
	</mapping>
	<mapping>
		<path>/errors/*</path>
		<decorator>/WEB-INF/ftl/decorator/footer.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/blankbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/navbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/header.ftl</decorator>
	</mapping>
	<mapping>
		<path>/movie/</path>
		<decorator>/WEB-INF/ftl/decorator/footer.ftl</decorator>
		<decorator>/WEB-INF/ftl/movie/MovieClassic.ftl</decorator>
		<decorator>/WEB-INF/ftl/movie/MovieComing.ftl</decorator>
		<decorator>/WEB-INF/ftl/movie/MovieHot.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/blankbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/navbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/header.ftl</decorator>
	</mapping>
	<mapping>
		<path>/search/movie</path>
		<decorator>/WEB-INF/ftl/decorator/footer.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/blankbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/navbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/header.ftl</decorator>
	</mapping>
	<mapping>
		<path>/movie/detail/*</path>
		<decorator>/WEB-INF/ftl/decorator/footer.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/blankbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/navbar.ftl</decorator>
		<decorator>/WEB-INF/ftl/decorator/header.ftl</decorator>
	</mapping>

</sitemesh>